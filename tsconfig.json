{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2023"],
      "module": "ESNext",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["./shared/*"]
      }
    },
    "include": ["server", "client", "shared"]
  }